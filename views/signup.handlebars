{{> navbar signup=signup}}

<div class="center">
  <h1>Sign Up</h1>
  <form id="signup-form">
    <div class="txt_field">
      <input type="text" id="username-input-signup" required>
      <span></span>
      <label>Username</label>
    </div>
    <div class="txt_field">
      <input type="text" id="email-input-signup" required>
      <span></span>
      <label>Email</label>
    </div>
    <div class="txt_field">
      <input type="password" id="password-input-signup" required>
      <span></span>
      <label>Password</label>
    </div>
    <input type="submit" value="Sign Up">
    <div class="login_link">
      Already a member? <a href="/login">Log In</a>
    </div>
  </form>
</div>

<script src="/js/signup.js"></script>